{
    "name": "zeplin-extension-xamarin",
    "version": "0.1.0",
    "description": "Generates XAML for Xamarin.Forms snippets.",
    "author": {
        "name": "Arnstein Johansen",
        "url": "http://codejunkii.com"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/goldnarms/zeplin-extension-xaml"
    },
    "scripts": {
        "start": "zem start",
        "build": "zem build",
        "clean": "zem clean",
        "exec": "zem exec"
    },
    "devDependencies": {
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.7.0",
        "mustache-loader": "^1.4.0",
        "zem": "^0.1.2"
    },
    "dependencies": {
        "indent-string": "^3.2.0",
        "lodash": "^4.17.5",
        "mustache": "^2.3.0"
    },
    "zeplin": {
        "displayName": "XAML",
        "projectTypes": [
            "android",
            "ios"
        ],
        "options": [
            {
                "name": "Sort styleguide resources",
                "type": "switch",
                "id": "sortResources",
                "default": true
            },
            {
                "name": "Consolidate duplicates (specify suffix)",
                "type": "text",
                "id": "duplicateSuffix",
                "default": ""
            },
            {
                "name": "Define HorizontalTextAlignment on",
                "type": "picker",
                "id": "textAlignmentMode",
                "default": "label",
                "options": [
                    {
                        "name": "Style",
                        "value": "style"
                    },
                    {
                        "name": "Label",
                        "value": "label"
                    }
                ]
            },
            {
                "name": "Ignore FontFamily",
                "type": "switch",
                "id": "ignoreFontFamily",
                "default": false
            }
        ]
    }
}
